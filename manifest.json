{
  "manifest_version": 2,

  "name": "InstaExt",
  "description": "This extension ....",
  "version": "1.0",

  "page_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
    "*://www.instagram.com/",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "unlimitedStorage"
   ],
   "background": {
    "persistent": true,
    "scripts": ["zepto.min.js","dexie.min.js","bg.js"]
  },
   "content_scripts" : [{
        "matches" : [ "*://www.instagram.com/*"],
        "js" : ["main.js"]
    }],
   "web_accessible_resources": ["inject.js"],
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}