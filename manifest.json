{
  "manifest_version": 2,

  "name": "InstaExt",
  "description": "This extension ....",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
    "*://www.instagram.com/",
    "webRequest",
    "webRequestBlocking"
   ],
   "background": {
    "persistent": true,
    "scripts": ["bg.js"]
  },
   "content_scripts" : [{
        "matches" : [ "*://www.instagram.com/*"],
        "js" : ["main.js"]
    }],
   "web_accessible_resources": ["inject.js"]
}